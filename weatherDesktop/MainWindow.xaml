        <Label FontFamily="Microsoft YaHei" FontSize="10" HorizontalAlignment="Right" Margin="0,188,1,0" Name="updateTime" Width="50" Grid.Row="1" Height="22" VerticalAlignment="Top" />

        <Menu Grid.Row="0" Height="23" HorizontalAlignment="Left" Name="menu" VerticalAlignment="Top" Width="200" IsMainMenu="True">
            <MenuItem Header="_Option" IsCheckable="False" Click="MenuItem_Click" />
        </Menu>
    </Grid>
</Window>
